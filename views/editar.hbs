                            <option>procesador</option>
							<option >ssd</option>
                            <option>memoria ram</option>
                            <option>fuenta de poder</option>
							<option >discos duros</option>
                            <option>teclado</option>
							<option>mouse</option>
                            <option>monitor</option>
                        </select>
						</label>
					<label class="form-group" >
						<input type="text" class="form-control" value="{{products.description}}" name="description" id="description" required></input>
						<span for="">Your Message</span>
						<span class="border"></span>
					</label>
                    <label class="form-group" for="picture">
                    <input type="text" class="form-control" value="{{products.picture}}" placeholder="Inserta Nombre y formato de la imagen" name="picture" id="picture"> 
					</label>
					<tabler class="tableEd">
					        <tr>
            <th ><button type="submit" class="btn btn btn-secondary btn-lg" method="Post" formaction="/api/product/{{products._id}}?_method=PUT">Modificar </button> </th> 
            <th > <button type="submit" class="btn btn btn-secondary btn-lg" method="Post" formaction="/api/product/{{products._id}}?_method=delete">Eliminar</button> </th>
							</tr>	
