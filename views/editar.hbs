        <div class="wrapper">
			<div class="inner">
                {{!-- //cuando entre a esta pagina de editar yo voy a tener la posibilidad de tener dicho id --}}
				<form action="/api/product/{{products._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
					<h3>Modificar Productos</h3>
					<p>Inserta los Productos de la Tienda y envialos</p>
                    <label class="form-group">
						<input type="text" class="form-control" disabled name="_Id" id="_id" value="{{products._id}}" style="color: black;">
						<span>ID</span>
						<span class="border"></span>
					</label>
					<label class="form-group">
						<input type="text" class="form-control" name="name" value="{{products.name}}" id="name" required>
						<span>Name</span>
						<span class="border"></span>
					</label>
					<label class="form-group">
						<input type="number" class="form-control"  value="{{products.price}}" name="price" id="price"  required>
